@import "../../helpers/*"

.advantages
  font-family Arial, sans-serifs
  max-width 900px
  margin 50px 0
  border-bottom 1px solid $grey

  perspective 900px
  transform-style preserve-3d

  &__title
    title()
  &__list
    transform-style preserve-3d

  &__advantage
    margin 0 0 45px
    padding 0 0 0 110px
    position relative

    &_start
      animation-play-state running

    animation-fill-mode both
    animation-duration 1s
    animation-timing-function ease-out
    animation-play-state paused
    animation-direction alternate
    animation-iteration-count 1

    &:nth-child(1)
      animation-name falling-even
      animation-delay 0s
    &:nth-child(2)
      animation-name falling-odd
      animation-delay .5s
    &:nth-child(3)
      animation-name falling-even
      animation-delay 1s
    &:nth-child(4)
      animation-name falling-odd
      animation-delay 1.5s

    &_history
      background url("../images/ic_history.svg") 7px 0px no-repeat
      background-size 74px auto
    &_service
      background url("../images/ic_garranty.svg") 0px 0px no-repeat
      background-size 88px auto
    &_return
      background url("../images/ic_sendback.svg") 12px 0px no-repeat
      background-size 64px auto
    &_time
      background url("../images/ic_clock.svg") 11px 0px no-repeat
      background-size 66px 66px
    &-title
      font-size 21px
      line-height 24px
      color $black
    &-text
      font-size 16px
      line-height 22px
      color $black
      margin 0 0 22px
    &-footnote
      font-size 13px
      line-height 15px
      color $dark-grey
      padding 0 0 0 10px
      text-indent -10px
      &:before
        content "* "
        color $black



html.no-svg .advantages
  &__advantage
    background none
    &_history
      background url("../images/ic_history.png") 7px 0px no-repeat
    &_service
      background url("../images/ic_garranty.png") 0 0 no-repeat
    &_return
      background url("../images/ic_sendback.png") 12px 0px no-repeat
    &_time
      background url("../images/ic_clock.png") 11px 0px no-repeat


@keyframes falling-odd {
    from {
      transform translateZ(-600px) rotateY(35deg)
      opacity .1
    }
    70%{
      transform translateZ(100px) rotateY(-20deg)
      opacity .7
      }
    100% {
      transform translateZ(0) rotateY(0)
      opacity 1
    }
}

@keyframes falling-even {
    from {
      opacity .1
      transform translateZ(-600px) rotateY(-35deg)
    }
    70%{
      transform translateZ(100px) rotateY(20deg)
      opacity .7
      }
    100% {
      transform translateZ(0) rotateY(0)
      opacity 1
    }
}
