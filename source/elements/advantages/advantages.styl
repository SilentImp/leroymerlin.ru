@import "../../helpers/*"

.advantages
  font-family Arial, sans-serifs
  max-width 900px
  margin 50px 0
  border-bottom 1px solid $grey

  perspective 600px
  perspective-origin 50% 20%
  transform-style preserve-3d

  &__title
    title()
  &__list
    transform-style preserve-3d
  &__advantage
    margin 0 0 45px
    padding 0 0 0 110px
    position relative
    // transform translateZ(200px)
    // opacity 0
    &_history
      background url("../images/ic_history.svg") 7px 0px no-repeat
      background-size 74px auto
    &_service
      background url("../images/ic_garranty.svg") 0px 0px no-repeat
      background-size 88px auto
    &_return
      background url("../images/ic_sendback.svg") 12px 0px no-repeat
      background-size 64px auto
    &_time
      background url("../images/ic_clock.svg") 11px 0px no-repeat
      background-size 66px 66px
    &-title
      font-size 21px
      line-height 24px
      color $black
    &-text
      font-size 16px
      line-height 22px
      color $black
      margin 0 0 22px
    &-footnote
      font-size 13px
      line-height 15px
      color $dark-grey
      padding 0 0 0 10px
      text-indent -10px
      &:before
        content "* "
        color $black



html.no-svg .advantages
  &__advantage
    background none
    &_history
      background url("../images/ic_history.png") 7px 0px no-repeat
    &_service
      background url("../images/ic_garranty.png") 0 0 no-repeat
    &_return
      background url("../images/ic_sendback.png") 12px 0px no-repeat
    &_time
      background url("../images/ic_clock.png") 11px 0px no-repeat
