@import "../../helpers/*"

.card-details
  font-family Arial, sans-serif
  max-width 900px
  &__when
    margin 50px 0
    border-bottom 1px solid $grey
    &-title
      color $green
      text-transform uppercase
      font-size 21px
      line-height 29px
      margin-bottom 29px
      &:last-child
        margin-bottom 45px
  &__address
    margin 50px 0
    border-bottom 1px solid $grey
    &-title
      font-size 21px
      line-height 29px
      font-weight bold
      color $black
      margin 0 0 29px
    &-line
      font-size 21px
      line-height 29px
      color $black
    &-list
      margin 0 0 45px
      padding 0
      perspective 200px
      perspective-origin 30px 100%
      transform-style preserve-3d

    &-flag
      transform-origin 50% 100%
      animation-fill-mode both
      animation-duration 1s
      animation-delay .25s
      animation-timing-function ease
      animation-play-state paused
      animation-iteration-count 1
      animation-name jump
      background url("../images/ic_location.svg") 0px 0px no-repeat
      background-size 42px auto
      height 56px
      width 60px
      float left
      position relative
      perspective 900px
      transform-style preserve-3d
      span
        display block
        width 5px
        height 5px
        position absolute
        top 100%
        left 50%
        margin -5px 0 0 -12px
        border-radius 100%
        transform translateY(3px) rotateX(-90deg)
        backface-visibility visible

        animation-fill-mode both
        animation-duration .4s
        animation-delay .5s
        animation-timing-function ease-out
        animation-play-state paused
        animation-iteration-count 2
        animation-name shade
      &_start
        animation-play-state running
        span
          animation-play-state running

  &__copyright
    margin 50px 0 0
    padding 0 0 50px
    font-size 13px
    line-height 15px
    color $dark-grey

html.no-svg .card-details
  &__address
    &-list
      background url("../images/ic_location.png") 0px 0px no-repeat

@keyframes jump {
    from {
      transform rotateX(-30deg) translateY(-30px)
      opacity 0
    }
    30%{
      transform rotateX(-30deg) translateY(0)
      opacity 1
      }
    35%{
      transform rotateX(-30deg) translateY(-10px)
      opacity 1
      }
    40%{
      transform rotateX(-30deg) translateY(0px)
      opacity 1
      }
    45%{
      transform rotateX(-30deg) translateY(5px)
      opacity 1
      }
    50%{
      transform rotateX(-30deg) translateY(0)
      opacity 1
      }
    90%{
      transform rotateX(-30deg) translateY(0)
      opacity 1
      }
    100% {
      transform rotateX(0) translateY(0)
    }
}


@keyframes shade {
  20% {
    box-shadow 0 0 0 0 $white, 0 0 0 1px rgba(102, 192, 93, 1)
    }
  99% {
    box-shadow 0 0 0 29px $white, 0 0 0 30px rgba(102, 192, 93, 0)
    }
  100%{
    box-shadow 0 0 0 0 rgba(255,255,255,0), 0 0 0 0 rgba(102, 192, 93, 0)
    }
  }
