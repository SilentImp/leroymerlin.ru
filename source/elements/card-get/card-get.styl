@import "../../helpers/*"


html.no-borderradius .card-get
  &__step
    span
      background url("../images/coin.png") 50% 50% no-repeat

.card-get
  max-width 900px
  margin 50px 0
  border-bottom 1px solid $grey
  font-family Arial, sans-serif
  &__title
    title()
  &__steps
    counter-reset: steps-counter;


  &__step
    padding 0 0 0 100px
    margin 0 0 45px
    position relative
    color $black
    font-size 16px
    line-height 22px

    perspective 600px
    perspective-origin 75px 20px
    transform-style preserve-3d

    span
      animation-fill-mode both
      animation-duration .75s, .6s
      animation-delay 0s, .75s
      animation-timing-function ease-out
      animation-play-state paused
      animation-iteration-count 1
      animation-name coin, shade

      display block
      top 2px
      left 46px
      position absolute
      background-color $light-green
      color $white
      text-align center
      line-height 29px
      height 29px
      width 29px
      border-radius 100%


  &__step_start span
    animation-play-state running


html.no-borderradius .card-get
  &__step
    &:before
      background url("../images/bullet.png") 0px 0px no-repeat


@keyframes shade {
  20% {
    box-shadow 0 0 0 0 $white, 0 0 0 1px rgba(102, 192, 93, 1)
    }
  to {
    box-shadow 0 0 0 19px $white, 0 0 0 20px rgba(102, 192, 93, 0)
    }
  }


@keyframes coin {
    from {
      transform translateZ(360px) rotateY(360deg)
      opacity 0
    }
    20%{
      transform translateZ(240px) rotateY(270deg)
      opacity .2
      }
    40%{
      transform translateZ(160px) rotateY(180deg)
      opacity .4
      }
    60%{
      transform translateZ(0px) rotateY(90deg)
      opacity .6
      }
    80%{
      transform translateZ(-160px) rotateY(45deg)
      opacity .8
      }
    100% {
      transform translateZ(0) rotateY(0)
      opacity 1
    }
}
