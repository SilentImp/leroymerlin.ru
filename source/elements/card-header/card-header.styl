@import "../../helpers/*"

.card-header
  display block
  width 100%
  height 320px
  background $light-grey url('../images/bg.png') 100% 50% no-repeat
  background-size auto 320px
  position relative
  z-index 20000
  &__card
    position absolute
    width 400px
    height 250px
    background $white
    background-position 50% 50%
    background-repeat no-repeat
    border-radius 15px
    box-shadow 0 0 5px 0 rgba($black, .25)
    &-front
      top 40px
      left 50%
      margin 0 0 0 -610px
      z-index 2
      background-image url("../images/front-big.png")
      background-size 400px auto
      background-position -2px 50%
    &-back
      top 20px
      left 50%
      margin 0 0 0 -230px
      z-index 1
      background-image url("../images/card-back.svg")
      background-size 347px auto

html.csstransforms3d body .card-header
  perspective 800px
  perspective-origin calc(50% - 200px)
  &__card
    pointer-events none
    will-change transform
    &-front,
    &-back
      top 50%
      left 50%
      z-index 1

    &-front
      margin -125px 0 0 -610px
      transform-origin 410px 125px
      transform rotateY(0) rotateX(0) translateZ(2px) translateX(20px) translateY(10px)
      z-index 2

    &-back
      margin -125px 0 0 -190px
      transform-origin -10px 125px
      transform rotateY(0) rotateX(0) translateZ(-2px) translateX(-20px) translateY(-10px)
      z-index -2

html.no-textshadow.no-cssanimations.no-csstransforms3d.no-csstransitions body .card-header,
html.no-svg body .card-header
  &__card
    width 408px
    height 258px
    box-shadow none
    &-front
      top 36px
      background url("../images/front.png") 0px 0px no-repeat
    &-back
      top 16px
      background url("../images/back.png") 0px 0px no-repeat
